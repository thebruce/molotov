{
  "name": "molotov",
  "description": "Molotov: (Mix/Plug)-in loader for explosive composeability",
  "main": "molotov.js",
  "directories": {
    "example": "examples"
  },
  "dependencies": {
    "callsite": "^1.0.0",
    "config": "^1.25.1",
    "fs-extra": "^3.0.0",
    "lodash": "^4.17.4",
    "require-directory": "^2.1.1",
    "try-require": "^1.2.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "coveralls": "^2.11.16",
    "eslint": "^3.16.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-find-rules": "^1.13.0",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-import": "^2.0.1",
    "husky": "^0.14.0",
    "npm-run-all": "^4.0.1",
    "nyc": "^11.0.1",
    "semantic-release": "^6.3.2"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "nyc ava && nyc report --reporter=html --reporter=lcov",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "coverage": "nyc --reporter=lcov --reporter=html check-coverage --statements 100 --lines 100 --branches 100 --functions 100",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thebruce/molotov.git"
  },
  "keywords": [
    "mixin",
    "plugins",
    "molotov"
  ],
  "author": "David Diers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebruce/molotov/issues"
  },
  "homepage": "https://github.com/thebruce/molotov#readme",
  "engines": {
    "node": ">=4"
  }
}

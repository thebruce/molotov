{
  "name": "molotov",
  "description": "Molotov: (Mix/Plug)-in loader for explosive composeability",
  "main": "molotov.js",
  "version": "0.0.0-development",
  "directories": {
    "example": "examples"
  },
  "dependencies": {
    "ajv": "^6.2.0",
    "fs-extra": "^5.0.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@commitlint/config-angular": "^6.1.2",
    "babel-eslint": "^8.2.2",
    "commitlint": "^6.1.2",
    "condition-noop": "^1.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "flow-bin": "^0.67.1",
    "flow-copy-source": "^1.3.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.3.0",
    "husky": "^0.14.0",
    "jest": "^22.4.2",
    "jest-environment-node-debug": "^2.0.0",
    "semantic-release": "^6.3.2",
    "semantic-release-conventional-commits": "^1.0.2"
  },
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "test": "npm run build && jest --coverage",
    "test-ci": "npm run build && jest --coverage --runInBand",
    "debug-test": "node --inspect --debug-brk ./node_modules/.bin/jest --env jest-environment-node-debug",
    "prepack": "npm run build",
    "precommit": "npm run build && npm run flow && npm run lint",
    "prepush": "npm test",
    "flow": "flow",
    "build": "flow-remove-types src/ --out-dir lib/ && flow-copy-source src/ lib",
    "lint": "eslint .",
    "flowstatus": "./node_modules/.bin/flow status",
    "flowremove": "flow-remove-types -p src -i .test.js -d lib",
    "flowgen": "flow gen-flow-files ./src/foo.js > ./dist/foo.js.flow",
    "flowstop": "flow stop",
    "travis-deploy-once": "travis-deploy-once",
    "coveralls": "cat ./__coverage__/lcov.info | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thebruce/molotov.git"
  },
  "keywords": [
    "mixin",
    "plugins",
    "molotov"
  ],
  "author": "David Diers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebruce/molotov/issues"
  },
  "homepage": "https://github.com/thebruce/molotov#readme",
  "engines": {
    "node": ">=6"
  },
  "jest": {
    "cacheDirectory": ".tmp/jest_cache",
    "coverageDirectory": "__coverage__",
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/helpers/",
      "<rootDir>/__tests__/.*/[__mocks__|files]/"
    ]
  },
  "release": {
    "verifyConditions": "condition-noop"
  }
}
